# OpenAI Configuration (Optional - only if you want to use GPT models)
# OPENAI_API_KEY=your_openai_api_key_here

# LLM Configuration (Open Source)
LLM_TYPE=huggingface
LLM_MODEL_NAME=microsoft/DialoGPT-medium
LLM_DEVICE=cpu
LLM_TEMPERATURE=0.7
LLM_MAX_LENGTH=512
LLM_USE_QUANTIZATION=false

# Ollama Configuration (if using Ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2:7b

# Llama.cpp Configuration (if using llama.cpp)
LLAMA_CPP_MODEL_PATH=./data/llm_models/llama-2-7b-chat.gguf
LLAMA_CPP_N_CTX=2048

# Embedding Model Configuration (Open Source)
EMBEDDING_MODEL_TYPE=sentence-transformers
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2
HUGGINGFACE_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=32

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/knowledge_assistant

# JWT Configuration
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Azure Key Vault
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id
KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Vector Database Configuration (Open Source)
CHROMA_PERSIST_DIRECTORY=./data/chroma_db

# Web Search Configuration (Open Source)
WEB_SEARCH_ENGINE=duckduckgo
WEB_SEARCH_MAX_RESULTS=5
WEB_SEARCH_TIMEOUT=10
EXTRACT_ARTICLE_CONTENT=false

# Monitoring Configuration (Open Source)
ENABLE_MONITORING=true
MONITORING_DB_PATH=./data/monitoring.db
PROMETHEUS_METRICS_ENABLED=true

# Application Configuration
APP_NAME=AI Knowledge Assistant
APP_VERSION=1.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0